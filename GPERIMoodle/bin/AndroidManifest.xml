<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gperimoodle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.gperimoodle.Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gperimoodle.UserFrame"
            android:label="@string/title_activity_user_frame"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.gperimoodle.MyInfo"
            android:label="@string/title_activity_my_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.gperimoodle.MyCourses"
            android:label="@string/title_activity_my_courses"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.gperimoodle.InstantMessaging"
            android:label="@string/title_activity_instant_messaging"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.gperimoodle.CourseContents"
            android:label="@string/title_activity_course_contents"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.gperimoodle.About"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
